{
  "name": "@basic/server",
  "private": true,
  "scripts": {
    "start": "nest start",
    "start:watch": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "build": "nest build",
    "test": "jest",
    "seed": "ts-node scripts/seed.ts",
    "db:migrate-save": "prisma migrate dev",
    "db:migrate-up": "prisma migrate deploy",
    "db:clean": "ts-node scripts/clean.ts",
    "db:init": "run-s \"db:migrate-save -- --name 'initial version'\" db:migrate-up seed",
    "prisma:generate": "prisma generate",
    "docker:db": "docker-compose -f docker-compose.db.yml up -d",
    "package:container": "docker build .",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down --volumes"
  },
  "dependencies": {
    "@amplication/nest-access-control": "2.2.1",
    "@apollo/server": "^4.9.1",
    "@nestjs/apollo": "^12.0.7",
    "@nestjs/common": "10.1.3",
    "@nestjs/config": "3.0.0",
    "@nestjs/core": "^10.1.3",
    "@nestjs/graphql": "^12.0.8",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.1.3",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/swagger": "^7.1.6",
    "@prisma/client": "5.1.1",
    "@types/bcrypt": "5.0.0",
    "bcrypt": "5.1.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "dotenv": "^16.3.1",
    "graphql": "16.7.1",
    "graphql-type-json": "0.3.2",
    "nest-morgan": "1.0.1",
    "npm-run-all": "4.1.5",
    "passport": "0.6.0",
    "passport-http": "0.3.0",
    "passport-jwt": "4.0.1",
    "reflect-metadata": "0.1.13",
    "swagger-ui-express": "5.0.0",
    "ts-node": "10.9.1",
    "type-fest": "2.19.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.11",
    "@nestjs/testing": "^10.1.3",
    "@types/express": "4.17.17",
    "@types/graphql-type-json": "0.3.2",
    "@types/jest": "29.5.3",
    "@types/normalize-path": "3.0.0",
    "@types/passport-http": "0.3.9",
    "@types/passport-jwt": "3.0.9",
    "@types/supertest": "2.0.12",
    "@types/validator": "^13.9.0",
    "jest": "29.6.2",
    "jest-mock-extended": "^3.0.5",
    "prisma": "5.1.1",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "typescript": "5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  }
}
